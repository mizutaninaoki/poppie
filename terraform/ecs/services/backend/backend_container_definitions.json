[
    {
      "name": "nginx",
      "image": "${account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/nginx:latest",
      "essential": true,
      "memory": 128,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "nginx",
          "awslogs-group": "/ecs/poppie/nginx"
        }
      },
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "dependsOn": [
        {
          "containerName": "django",
          "condition": "START"
        }
      ]
    },
    {
      "name": "django",
      "image":"${account_id}.dkr.ecr.ap-northeast-1.amazonaws.com/django:latest",
      "essential": true,
      "memory": 384,
      "command": ["gunicorn", "-w", "3", "-b", "0.0.0.0:8000", "config.wsgi:application"],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "django",
          "awslogs-group": "/ecs/poppie/django"
        }
      },
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000
        }
      ],
      "environment": [
        {
          "name": "ENV_NAME",
          "value": "${env_name}"
        },
        {
          "name": "SECRET_KEY",
          "value": "${django_secret_key}"
        },
        {
          "name": "AWS_S3_ACCESS_KEY_ID",
          "value": "${aws_s3_access_key_id}"
        },
        {
          "name": "AWS_S3_SECRET_ACCESS_KEY",
          "value": "${aws_s3_secret_access_key_id}"
        },
        {
          "name": "AWS_STORAGE_BUCKET_NAME",
          "value": "${aws_storage_bucket_name}"
        },
        {
          "name": "AWS_REGION_NAME",
          "value": "${aws_region_name}"
        },
        {
          "name": "ENGINE",
          "value": "${engine}"
        },
        {
          "name": "POSTGRES_DB",
          "value": "${postgres_db}"
        },
        {
          "name": "POSTGRES_USER",
          "value": "${postgres_user}"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${postgres_password}"
        },
        {
          "name": "DB_HOST",
          "value": "${db_host}"
        },
        {
          "name": "DB_PORT",
          "value": "${db_port}"
        },
        {
          "name": "DATABASE",
          "value": "${database}"
        },
        {
          "name": "DATABASE",
          "value": "${database}"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "${allowed_hosts}"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "value": "${cors_allowed_origins}"
        }
      ]
    }
  ]